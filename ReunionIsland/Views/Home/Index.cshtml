@*WELCOME PANEL*@
<div class="par" id="welcomePanel" data-stellar-background-ratio="0.5">
    <div class="container">
        <h2 data-aos="zoom-in"
            data-aos-duration="600"
            >Bienvenue sur l'île de la Réunion</h2>
    </div>
</div>

@*BRIEF DESCRIPTION*@
<div id="briefDescription" class="par">
    <div class="container">
        <div class="row">
            <div data-aos="zoom-in"
                 data-aos-offset="500"
                 data-aos-duration="800"
                 data-aos-anchor="#briefDescription"
                 class="col-xs-5 col-md-7 col-lg-9 vcenter" id="briefDescriptionText">
                <div class="container">
                    <h3>Localisation</h3>
                    <br />
                    <div id="para">
                        <p>Venez passer un séjour agréable dans une charmante petite villa, T2 de 85 m2, située dans un jardin tropical privatif, à l’Ermitage les Bains.</p>
                        <p>Le meublé, à 200m du lagon, peut accueillir jusqu’à 5 personnes.</p>
                    </div>
                    <br />
                    <div id="link">
                        <p><a class="toMapLocalisation" href="@Url.Action("Index", "Localisation")">Voir la carte</a></p>
                    </div>
                </div>
            </div>
            <div data-aos="zoom-in"
                 data-aos-offset="500"
                 data-aos-duration="800"
                 data-aos-anchor="#briefDescription"
                 class="col-xs-5 col-md-7 col-lg-9 vcenter" id="briefDescriptionPhoto">
                <div class="container">
                </div>
            </div>
        </div>
    </div>
</div>

